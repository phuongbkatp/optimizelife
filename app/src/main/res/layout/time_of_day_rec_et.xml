<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_reminder_rec_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        tools:ignore="ContentDescription"/>

    <EditText
        android:id="@+id/et_hour_rec_day"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLength="2"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:textSize="14sp"
        android:hint="@string/hour"
        android:textColor="@color/black_54p"
        android:textColorHint="@color/black_26p"
        android:textCursorDrawable="@null"
        android:selectAllOnFocus="true"/>

    <EditText
        android:id="@+id/et_minute_rec_day"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLength="2"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textSize="14sp"
        android:hint="@string/minute"
        android:textColor="@color/black_54p"
        android:textColorHint="@color/black_26p"
        android:textCursorDrawable="@null"
        android:selectAllOnFocus="true"/>

    <ImageView
        android:id="@+id/iv_delete_reminder_as_bt_rec_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:src="@drawable/act_delete_time_rec"
        android:contentDescription="@string/cd_delete_reminder_time_day_rec"
        android:background="@drawable/selectable_item_background"/>

</LinearLayout>