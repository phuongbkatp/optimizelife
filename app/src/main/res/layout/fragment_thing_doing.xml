<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_thing_doing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/thing_doing_dialog_title"/>

    <LinearLayout
        android:id="@+id/ll_auto_start_doing_as_bt"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/selectable_item_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_start_doing_title"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_auto_start_doing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_26p"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_asd_time_as_bt"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/selectable_item_background">

        <TextView
            android:id="@+id/tv_asd_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_start_doing_time_title"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_asd_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_26p"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_auto_strict_mode_as_bt"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/selectable_item_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_strict_mode_title"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_auto_strict_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_26p"
            android:textSize="14sp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_14p"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/black_26p"
            android:includeFontPadding="false"
            android:text="OR"/>

    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_start_doing_as_bt_dialog"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:foreground="@drawable/selectable_item_background_light"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="@string/start_doing_full_title"/>

    </android.support.v7.widget.CardView>

</LinearLayout>