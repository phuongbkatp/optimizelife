<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ywwynm.everythingdone.activities.AboutActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EEEEEE">

        <View
            android:id="@+id/view_status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="72dp"
            app:titleTextColor="@color/black_54p"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_about_head"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:src="@drawable/about_head"
                android:scaleType="center"
                android:contentDescription="@string/everythingdone"
                app:backgroundTint="#EEEEEE"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:pressedTranslationZ="0dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_bottom_about"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@color/blue_grey_deep_grey">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ywwynm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ywwynm's"
                    android:textColor="@color/app_accent"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/tv_everything_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="EverythingDone"
                    android:textColor="@color/app_accent"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/about_motto"
                    android:textSize="18sp"
                    android:textColor="@color/white_76p"/>

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/about_version"
                    android:textColor="@color/white_54p"/>

                <TextView
                    android:id="@+id/tv_license_as_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="@string/about_license"
                    android:textColor="@color/white_50p"
                    android:onClick="showLicenseDialog"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@drawable/actionbar_shadow"/>

        </FrameLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_support"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|end"
        android:scaleType="center"
        android:src="@drawable/act_support"
        android:contentDescription="@string/act_support"
        app:rippleColor="@color/white_54p"
        app:elevation="6dp"
        app:borderWidth="0dp"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/app_pink"/>

</merge>