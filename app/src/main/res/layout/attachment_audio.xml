<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_audio_attachment"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_margin="@dimen/card_audio_attachment_margin"
    android:foreground="@drawable/selectable_item_background"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_audio_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_54p"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_audio_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:textColor="@color/black_26p"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <ImageView
            android:id="@+id/iv_card_audio_first"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/cd_play_audio_attachment"
            android:scaleType="center"
            android:background="@drawable/selectable_item_background"/>

        <ImageView
            android:id="@+id/iv_card_audio_second"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/cd_delete_audio_attachment"
            android:scaleType="center"
            android:background="@drawable/selectable_item_background"/>

        <ImageView
            android:id="@+id/iv_card_audio_third"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/cd_audio_attachment_info"
            android:scaleType="center"
            android:background="@drawable/selectable_item_background"/>

    </LinearLayout>

</android.support.v7.widget.CardView>