<resources>

    <style name="EverythingDoneTheme.Things" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="android:windowBackground">@color/bg_activity_things</item>
        <item name="android:dialogTheme">@style/EverythingDoneTheme.Dialog</item>
        <item name="swirl_ridgeColor">@color/black_54</item>
        <item name="swirl_errorColor">@color/error</item>
    </style>
    
    <style name="EverythingDoneTheme.Things.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="EverythingDoneTheme.Things.Drawer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EverythingDoneTheme.Things.Search" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/black_54</item>
        <item name="android:textColorHighlight">@color/black_26p</item>
    </style>

    <style name="EverythingDoneTheme.Detail" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="swirl_ridgeColor">@color/black_54</item>
        <item name="swirl_errorColor">@color/error</item>
        <!--<item name="actionOverflowButtonStyle">@style/EverythingDoneTheme.Detail.Overflow</item>-->
    </style>

    <style name="EverythingDoneTheme.Detail.Actionbar">
        <item name="android:background">@drawable/selectable_item_background</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <!--<style name="EverythingDoneTheme.Detail.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">-->
        <!--<item name="android:src">@drawable/ic_overflow</item>-->
    <!--</style>-->

    <style name="EverythingDoneTheme.Detail.EditText" parent="Theme.AppCompat">
        <item name="colorAccent">@color/app_accent</item>
        <item name="android:textColorHighlight">#66FFEB3B</item>
    </style>

    <style name="EverythingDoneTheme.Detail.CheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/app_accent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="EverythingDoneTheme.ImageViewer" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="EverythingDoneTheme.ImageViewer.Actionbar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="EverythingDoneTheme.Settings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/blue_deep</item>
        <item name="swirl_ridgeColor">@color/blue_deep</item>
        <item name="swirl_errorColor">@color/error</item>
    </style>

    <style name="EverythingDoneTheme.About" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="EverythingDoneTheme.Statistic" parent="Theme.AppCompat.NoActionBar">
        <item name="android:dialogTheme">@style/EverythingDoneTheme.Dialog</item>
        <item name="android:windowBackground">@color/bg_activity_things</item>
    </style>

    <style name="EverythingDoneTheme.Statistic.Actionbar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="EverythingDoneTheme.TotallyTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="swirl_ridgeColor">@color/black_54</item>
        <item name="swirl_errorColor">@color/error</item>
    </style>

    <style name="EverythingDoneTheme.Help" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="EverythingDoneTheme.ThingWidgetConfiguration"
           parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="EverythingDoneTheme.Doing" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

    <style name="ContextualToolbarText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black_54p</item>
        <item name="android:textSize">@dimen/contextual_toolbar_text_size</item>
    </style>

    <style name="ColorPickerAnimation">
        <item name="@android:windowEnterAnimation">@anim/color_picker_show</item>
        <item name="@android:windowExitAnimation">@anim/color_picker_hide</item>
    </style>

    <style name="QuickRemindPickerAnimation">
        <item name="@android:windowEnterAnimation">@anim/quick_remind_picker_show</item>
        <item name="@android:windowExitAnimation">@anim/quick_remind_picker_hide</item>
    </style>

    <style name="TimeTypePickerAnimation">
        <item name="@android:windowEnterAnimation">@anim/time_type_picker_show</item>
        <item name="@android:windowExitAnimation">@anim/time_type_picker_hide</item>
    </style>

    <style name="SelectableItemForeground">
        <item name="android:foreground">@drawable/selectable_item_background</item>
    </style>

    <style name="SelectableItemBackgroundBorderlessLight">
        <item name="android:background">@drawable/selectable_item_background_light</item>
    </style>

    <style name="EverythingDoneTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EverythingDoneTheme.NoticeableNotification" parent="EverythingDoneTheme.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="WhiteListStyle" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/control_highlight_light</item>
    </style>

    <style name="BlackListStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/black_26p</item>
    </style>

</resources>
